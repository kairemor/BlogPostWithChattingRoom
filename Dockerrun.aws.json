{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "essential": true,
            "name": "php",
	    "image": "kairemor/php-mongodb",
	    "memory": 128
        },
        {
            "essential": true,
            "image": "nginx:1.17",
	    "memory": 128,
	    "links":["php"],
            "mountPoints": [
                {
                    "containerPath": "/var/www/myapp",
                    "sourceVolume": "/home/kairemor/DIC1_KM/NoSQL/Prof/Project"
                },
                {
                    "containerPath": "/etc/nginx/conf.d/default.conf",
                    "sourceVolume": "/home/kairemor/DIC1_KM/NoSQL/Prof/Project/site.conf"
                }
            ],
            "name": "web",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        }
    ],
}

